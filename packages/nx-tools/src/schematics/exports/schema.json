{
  "$schema": "http://json-schema.org/schema",
  "$id": "@webundsoehne-private/nx-tools/exports",
  "title": "@webundsoehne-private/nx-tools/exports",
  "description": "Export the Typescript files from a common file.",
  "examples": [],
  "type": "object",
  "properties": {
    "skipFormat": {
      "type": "boolean",
      "aliases": ["skip-format"],
      "description": "Skip formatting files.",
      "default": false
    },

    "silent": {
      "description": "Run in silent mode.",
      "type": "boolean"
    },

    "force": {
      "description": "Do not prompt for overwrites.",
      "type": "boolean"
    },

    "verbose": {
      "description": "Set this to debug mode.",
      "type": "boolean"
    }
  },
  "required": []
}
