{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"],
      "@commands/*": ["commands/*"],
      "@helpers/*": ["helpers/*"],
      "@interfaces/*": ["interfaces/*"],
      "@context/*": ["interfaces/commands/*"],
      "@templates/*": ["templates/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
